## link api and products
##############################

#1 get recipes
PREFIX : <http://recipes-project.com/schema#>

SELECT ?recipeName ?dishType ?ingredient
WHERE {
    SERVICE <http://localhost/service/edamam/findRecipes?keyword=cake> {
      ?recipe :name ?recipeName ;
      :recipeCategory ?dishType ;
      :recipeIngredient ?ingredient .
    }
}

#2 get products for each ingredient
PREFIX : <http://recipes-project.com/schema/>

SELECT ?productName ?price ?brand
WHERE {
    ?p :productName ?productName ;
    :price ?price ;
    :brandName ?brand .
}

