@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://recipes-project.com/schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix shapes: <http://recipes-project.com/shapes#> .

shapes:product a sh:NodeShape ;
  sh:targetClass :Product ;
  sh:property [
    sh:path :price ;
    sh:datatype xsd:float;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path :brand ;
    sh:class :Brand;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path :productName;
    sh:datatype xsd:string;
    sh:minLength 1;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] .

shapes:product_type a sh:NodeShape;
  sh:targetObjectsOf :deduced_type;
  sh:nodeKind sh:IRI;
  sh:pattern "dbpedia". 